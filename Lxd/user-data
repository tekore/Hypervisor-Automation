#cloud-config

locale: en_GB.UTF-8
keyboard:
  layout: gb

  ssh:
    install-server: true
    allow-pw: false
  
  package_update: true
  package_upgrade: true
  package_reboot_if_required: false
  packages:
    - git
    - ansible

runcmd:
  - sleep 10
  - apt-get update
  - apt-get upgrade -y
  - apt-get install -y ansible openssh-server
  - ansible-pull -U https://github.com/tekore/Ansible.git -i localhost --purge playbooks/provisionNewServer.yml
